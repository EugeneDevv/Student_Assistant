<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".welcome.SplashActivity">

    <ImageView
        android:id="@+id/splash_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/uoelogo" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_imageView"
        android:layout_centerHorizontal="true"
        android:text="STUDENT ASSISTANT APPLICATION"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_progressBar"
        android:layout_centerHorizontal="true"
        android:text="(UOE SASS APP)"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30sp"
      android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginBottom="30dp"/>

    <ProgressBar
        android:id="@+id/splash_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="150dp"
        android:layout_height="115dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".welcome.LogInActivity">

    <EditText
        android:id="@+id/edt_username_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_edt_style"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:hint="Email"
        android:textColor="#000"/>
    <Button
        android:id="@+id/reset_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_username_reset"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/roundt_btn_style"
        android:text="reset"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/reset_txt_login_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reset_btn"
        android:layout_marginTop="20dp"
        android:text="Log In"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/buttonColor"/>
    <TextView
        android:id="@+id/txt_link_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/reset_txt_login_link"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:layout_marginEnd="20dp"
        android:text="If you don't have an account yet, CLICK HERE"
        android:gravity="center"
        android:textColor="@color/buttonColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>
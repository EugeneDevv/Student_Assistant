<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".welcome.LogInActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="UOE Student Assitant"
        android:textSize="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/buttonColor"
        android:gravity="center"/>
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_edt_style"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        android:hint="Email"
        android:textColor="#000"/>
    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_username"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:paddingTop="7dp"
        android:paddingLeft="20dp"
        android:layout_marginEnd="50dp"
        android:inputType="textPassword"
        android:background="@drawable/round_edt_style"
        android:hint="password"
        android:textColor="#000"/>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_password"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/roundt_btn_style"
        android:text="Sign In"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/txt_password_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        android:layout_marginTop="20dp"
        android:text="Forgot Password?"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/buttonColor"/>
    <TextView
        android:id="@+id/txt_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_password_link"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:layout_marginEnd="20dp"
        android:text="If you don't have an account yet, CLICK HERE"
        android:gravity="center"
        android:textColor="@color/buttonColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>
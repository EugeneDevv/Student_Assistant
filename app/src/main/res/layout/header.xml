<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:background="@drawable/uoeadmin2"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/header_admNo_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/header_circle_imageV"
        android:padding="2dp"
        android:text="COM/045/16"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_admNo_txt"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/header_circle_imageV"
        android:padding="2dp"
        android:text="EUGENE ODHIAMBO"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_circle_imageV"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:elevation="30dp"
        android:src="@drawable/uoe_logo2"
        app:civ_border_color="@color/cream_chep"
        app:civ_border_width="4dp"
        app:civ_circle_background_color="@color/design_default_color_on_secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_circle_imageV"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:text="UOE - SASS APP"
            android:textColor="@color/whiteColor"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>